#!/usr/bin/env ruby

require_relative '../lib/move.rb'

puts "Welcome to Tic Tac Toe!"
board= [1,2,3,4,5,6,7,8,9]
puts display_board(board)
puts "Where would you like to go?"
user_input = gets.strip
index = input_to_index(user_input)
current_player = "X"
move(board, index, current_player)
display_board(board)
current_player = "O"
puts display_board(board)
puts "Where would you like to go?"
user_input = gets.strip
index = input_to_index(user_input)
current_player = "X"
move(board, index, current_player)
display_board(board)
current_player = "O"puts display_board(board)
puts "Where would you like to go?"
user_input = gets.strip
index = input_to_index(user_input)
current_player = "X"
move(board, index, current_player)
display_board(board)
current_player = "O"puts display_board(board)
puts "Where would you like to go?"
user_input = gets.strip
index = input_to_index(user_input)
current_player = "X"
move(board, index, current_player)
display_board(board)
current_player = "O"
